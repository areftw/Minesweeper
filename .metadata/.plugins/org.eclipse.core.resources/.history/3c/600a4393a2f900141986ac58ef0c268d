import java.awt.*;
import javax.swing.*;

public class MinesweeperTemplate extends JPanel {
	private static final int WIDTH = 500;
	private static final int LENGTH = 400;
	public MinesweeperTemplate()                       // set up graphics window
    {
        super();
        setBackground(Color.WHITE);
        this.setLayout(null);
    }
	
    public static void main(String[] args)
    {
    	MinesweeperTemplate panel = new MinesweeperTemplate();                            // window for drawing
        JFrame application = new JFrame();                            // the program itself
        
        application.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);   // set frame to exit
                                                                      // when it is closed
        application.add(panel);           

        application.setSize(WIDTH, LENGTH);
        /*
        for (int i = 0; i <= WIDTH - 30; i+= 35) {
        	for (int j = 0; j <= LENGTH -30; j+= 35) {
        		JButton button = new JButton();
        		button.setBounds(0, 0, i, j);
                panel.add(button);
        	}
        }
        */
        
        JButton button1 = new JButton();
		button1.setBounds(0, 0, 30, 30);
        panel.add(button1);
        JButton button2 = new JButton();
		button2.setBounds(35, 0, 30, 30);
        panel.add(button2);
        
        application.setVisible(true);
    }
}
